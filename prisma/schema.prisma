// multi field relations between models 
model User{
  firstName String
  lastName String 
  profile Profile?
  @@id([firstName, lastName])
}

model Profile {
  id Int @id
  userFirstName String 
  userLastName String 
  user User @relation(fields: [userFirstName, userLastName], references: [firstName, lastName])

  @@unique([userFirstName, userLastName])
}
enum Role {
  USER
  ADMIN
}
